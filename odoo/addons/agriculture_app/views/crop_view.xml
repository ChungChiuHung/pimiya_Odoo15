<odoo>
  <record id="view_form_crop" model="ir.ui.view">
    <field name="name">Crop Form</field>
    <field name="model">agriculture.crop</field>
    <field name="arch" type="xml">

    <form>
      <sheet>
        <group name="group_top">
          <group name="group_left">
            <field name="SeqNumber" />
            <field name="SellerId" />
            <field name="SellerName" />
            <field name="CropVariety" />
            <field name="CropType" />
            <field name="StartTime" />
            <field name="EndTime" />
          </group>
          <group name="group_right">
            <field name="Region" />
            <field name="AuxId" />
            <field name="FarmerType" />
            <field name="FarmingMethod" />
            <field name="first_estimated_price" />
            <field name="total_weight_vehicle" />
            <field name="unload_weight_vehicle" />
            <field name="CropWeight" />
            <field name="crop_humility" />
            <field name="crop_humility_type" />
            <field name="dry_crop_cubic_weight" />
            <field name="crop_conversion_rate" />
            <field name="dry_crop_weight" />
          </group>
        </group>
      </sheet>
    </form>

    </field>
  </record>

    <!-- explicit list view definition -->
    <record id="view_tree_crop" model="ir.ui.view">
      <field name="name">Crop List</field>
      <field name="model">agriculture.crop</field>
      <field name="arch" type="xml">
        <tree>
          <!-- <field name="active"/> -->
          <field name="active" />
          <field name="SeqNumber" />
          <field name="SellerName" />
          <field name="CropVariety" />
          <field name="CropType" />
        </tree>
      </field>
    </record>

    <!-- explicit search view definition -->
    <record id="view_search_crop" model="ir.ui.view">
      <field name="name">Crop Filters</field>
      <field name="model">agriculture.crop</field>
      <field name="arch" type="xml">
        <search>
          <field name="SellerName"/>
          <field name="CropVariety"/>
          <filter name="filter_inactive"
                  string="InEstimated"
                  domain="[('active','=',True)]"/>
          <filter name="filter_active"
                  string="Estimated"
                  domain="[('active','=',False)]"/>
        </search>
      </field>
    </record>

</odoo>