<odoo>
  <data>

    <!-- form view definition -->
    <record id="view_form_archived_additional_item" model="ir.ui.view">
      <field name="name">Archived Additional Item Form</field>
      <field name="model">agriculture.archived_additional_item</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <label for="datetime" string="日期" />
            <field name="datetime" widget="date" options="{'format': 'YYYY-MM-DD'}" />
            <br />

            <label for="item_name" string="項目" />
            <field name="item_name" />

            <label for="item_kind" string="應付/應收" />
            <field name="item_kind" />

            <label for="amount" string="數量" />
            <field name="amount" />

            <label for="unit_price" string="單位價格" />
            <field name="unit_price" />

            <label for="total_price" string="總價" />
            <field name="total_price" />

            <div>
              <label for="drying_allowance" string="烘乾補助" attrs="{'invisible': [ ('item_kind','!=','expenditure' ) ]}" />
              <field name="drying_allowance" attrs="{'invisible': [ ('item_kind','!=','expenditure' ) ]}" />

              <label for="transport_allowance" string="搬運補助" attrs="{'invisible': [ ('item_kind','!=','expenditure' ) ]}" />
              <field name="transport_allowance" attrs="{'invisible': [ ('item_kind','!=','expenditure' ) ]}" />
            </div>


            <div>
              <label for="interest" string="應收利息" attrs="{'invisible': [ ('item_kind','!=','income' ) ]}" />
              <field name="interest" attrs="{'invisible': [ ('item_kind','!=','income' ) ]}" />

              <label for="comment" string="備註說明" attrs="{'invisible': [ ('item_kind','!=','income' ) ]}" />
              <field name="comment" attrs="{'invisible': [ ('item_kind','!=','income' ) ]}" />
            </div>

          </sheet>
        </form>
      </field>
    </record>

    <!-- list view definition -->
    <record id="view_tree_archived_additional_item" model="ir.ui.view">
      <field name="name">Archived list</field>
      <field name="model">agriculture.archived_additional_item</field>
      <field name="arch" type="xml">
        <tree>
          <field name="datetime" string="日期" widget="date" options="{'format': 'YYYY-MM-DD'}" />
          <field name="item_name" string="項目" />
          <field name="item_kind" string="應付/應收" />
          <field name="amount" string="數量" />
          <field name="unit_price" string="單位價格" />
          <field name="total_price" string="總價" />
        </tree>
      </field>
    </record>

    <!-- search view definition -->
    <record id="view_search_archived_additional_item" model="ir.ui.view">
      <field name="name">Archived Filters</field>
      <field name="model">agriculture.archived_additional_item</field>
      <field name="arch" type="xml">
        <search>
          <field name="item_name" />
        </search>
      </field>
    </record>

  </data>
</odoo>