                <tr>
                    <td colspan="3" class="text-left">
                        <span>電話： 089861033</span>
                    </td>
                    <td colspan="3" class="text-left">
                        <span>傳真： 089865329</span>
                    </td>
                </tr>
            </tbody>
        </table>
    </template>

    <template id="crop_dry_report">
        <xpath expr="." position="inside">
            <link href="/agriculture_app/static/css/report.css" rel="stylesheet" type="text/css" />
        </xpath>

        <t t-foreach="docs" t-as="doc">
            <t t-set="doc_type">
                <span></span>
            </t>
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <t t-set="doc_type">
                            <span style="position:absolute; right:30px;">收執聯</span>
                        </t>
                        <t t-call="agriculture_app.crop_dry_report_doc" />

                        <div class="mb-3" style="border-bottom: 1px dotted #000000;"></div>

                        <t t-set="doc_type">
                            <span style="position:absolute; right:30px;">備存聯</span>
                        </t>
                        <t t-call="agriculture_app.crop_dry_report_doc" />
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Wet -->
    <template id="crop_wet_report">
        <t t-foreach="docs" t-as="doc">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page"></div>
                </t>
            </t>
        </t>
    </template>
</odoo>