<odoo>
    
    <!-- list view definition for kanban -->
    <record id="view_kanban_crop_storage" model="ir.ui.view">            
    <field name="name">Storage Kanban</field>            
    <field name="model">agriculture.storage</field>            
      <field name="arch" type="xml">
      <kanban>
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_global_click">
              <!-- <div class="o_kanban_image">
              </div> -->
              <div class="oe_kanban_details">                                    
                <strong class="o_kanban_record_title">                                    
                  <field name="StorageId"/>
                </strong>
                <div class="oe_kanban_record_subtitle">
                  <field name="CropVarieties"/>
                  <field name="TotalWeight"/>
                </div>
                <!-- <div t-if="record.CropVariety_bonus.value">                                        
                  <t t-esc="record.CropVariety_bonus.value"/>                                
                </div> -->
              </div>
            </div>
          </t>
        </templates>
      </kanban>
      </field>
    </record>

    <record id="view_form_crop_storage" model="ir.ui.view">
    <field name="name">Storage Form</field>
    <field name="model">agriculture.storage</field>
    <field name="arch" type="xml">
        <form>
          <sheet>
            <group name="group_left">
              <field name="StorageId" />
              <field name="CropVarieties" readonly="1"/>
              <field name="TotalWeight" />
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>
    

</odoo>
