<odoo>
  <data>
    <!-- Agriculture User Group -->
    <record id="agriculture_group_user" model="res.groups">
      <field name="name">User</field>
      <!-- <field name="category_id" ref="base.module_category_services_agriculture" /> -->
      <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>
    <!-- Agriculture Manager Group -->
    <record id="agriculture_group_manager" model="res.groups">
      <field name="name">Manager</field>
      <!-- <field name="category_id" ref="base.module_category_services_agriculture" /> -->
      <field name="implied_ids" eval="[(4, ref('agriculture_group_user'))]" />
      <field name="users" eval="[(4, ref('base.user_root')),
                  (4, ref('base.user_admin'))]" />
    </record>
  </data>
  <data noupdate="1"> 
    <record id="crop_user_rule" model="ir.rule"> 
      <field name="name">Crop User Access</field> 
      <field name="model_id" ref="model_agriculture_crop"/> 
      <!-- <field name="domain_force">
        [('PriceState', '=', 'done')] 
      </field>  -->
      <field name="groups" eval="[(4, ref('agriculture_group_user'))]"/> 
    </record> 
  </data>
</odoo>
